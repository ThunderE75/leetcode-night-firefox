{
  "compilerOptions": {
    "target": "es5",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "noEmit": false,
    "jsx": "react-jsx",
    "outDir": "dist"
  },
  "include": [
    "scripts/**/*.js",
    "src/**/*.ts",
    "src/**/*.tsx",
    ".eslintrc.cjs",
    "vite.config.ts",
    "manifest.config.ts",
    "commitlint.config.js"
  ],
  "exclude": [
    "dist",
    "node_modules"
  ]
}
